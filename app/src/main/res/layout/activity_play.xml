<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.alivc.testmediaplayer.MainActivity"
    android:padding="0dp"
                android:id="@+id/container"
    style="@android:style/Theme.NoTitleBar.Fullscreen">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:id="@+id/GLViewContainer"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="false"
            android:padding="0dp"
            android:layout_alignParentRight="true"
            android:layout_margin="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp">
        <!--<SurfaceView -->
                <!--android:id="@+id/surface_view"-->
                <!--android:layout_width="fill_parent" -->
                <!--android:layout_height="fill_parent"/>-->

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:background="#00FFFFFF"
        android:id="@+id/Title"
        android:textAlignment="center"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="标题"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/video_title"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:id="@+id/LayoutTip">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Buffering"
            android:id="@+id/text_tip"
            android:gravity="center_horizontal"
            android:textColor="#00AA00"
            android:visibility="gone"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/error_layout"
        android:background="#00FFFFFF"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="错误:"
            android:id="@+id/error_info"
            android:visibility="gone"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLayout"
        android:layout_alignParentEnd="false"
        android:gravity="center|center_horizontal"
        android:background="#00FFFFFF"
        android:visibility="gone"
        android:layout_below="@+id/LayoutTip"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pause_button"
            android:src="@drawable/vp_pause"
            android:layout_gravity="center"
            android:visibility="visible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重播"
            android:id="@+id/replay_button"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignBottom="@id/GLViewContainer"
        android:id="@+id/progress_layout"
        android:background="#00000000"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="00:00"
            android:id="@+id/current_duration"
            android:background="#00FFFFFF"
            android:layout_marginTop="5dp"
            android:textColor="#CCCCCC"
            android:paddingLeft="2dp"
            android:gravity="right" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/seek_thumb"
            android:max="100000000"
            android:thumbOffset="1dip"
            android:maxHeight="6dp"
            android:minHeight="6dp"
            android:layout_weight="10"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:progress="0"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="00:00"
            android:id="@+id/total_duration"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:clickable="false"
            android:textColor="#CCCCCC"
            android:paddingRight="2dp" />
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:id="@+id/decoder_type"
            android:visibility="visible"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:background="#00FFFFFF"
            android:clickable="false"
            android:textColor="#CCCCCC" />
    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/surface_view_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    <!--<Button android:layout_width="wrap_content" android:layout_height="wrap_content"-->
            <!--android:text="SwitchSurface"-->
            <!--android:onClick="switchSurface"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:visibility="visible"/>-->
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="SwitchScalingMode"
            android:onClick="switchScalingMode"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:visibility="visible"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="SwitchMute"
            android:onClick="switchMute"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:visibility="visible"/>
    <!--<Button android:layout_width="wrap_content" android:layout_height="wrap_content"-->
            <!--android:text="goToActivity"-->
            <!--android:onClick="gotoActivity"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:visibility="visible"/>-->
</RelativeLayout>
